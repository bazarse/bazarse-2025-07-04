<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Vinu Bhaisahab's Dark Theme for Night Mode - No Default Splash Screen -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Pure black background - no splash screen -->
        <item name="android:windowBackground">#FF000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">#FF000000</item>
        <item name="android:navigationBarColor">#FF000000</item>
    </style>

    <!-- Dark Normal Theme for Night Mode -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">#FF000000</item>
        <item name="android:statusBarColor">#FF000000</item>
        <item name="android:navigationBarColor">#FF000000</item>
    </style>
</resources>
